// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Product {
  id    String  @id @default(uuid())
  name  String
  value Decimal
  type  Int

  @@map("products")
}

model Sell {
  id          String    @id @default(uuid())
  client      String
  createdAt   DateTime  @default(now())
  updateAt    DateTime  @updatedAt
  products    Json // Json
  value       Decimal // Valor
  method      Decimal   @default(0)
  discount    Decimal?  @default(0) // Desconto para da o valor final
  hasWarranty Boolean // Se h√° garantia
  warranty    DateTime? // Data da garantia
  paid        Boolean
  userId      String
  user        User      @relation(fields: [userId], references: [id])

  @@map("sells")
}

model User {
  id        String    @id @default(uuid())
  name      String
  login     String    @unique
  pass      String
  createdAt DateTime  @default(now())
  updateAt  DateTime  @updatedAt
  sells     Sell[]
  services  Service[]

  @@map("users")
}

model Service {
  id          String   @id @default(uuid())
  name        String
  phone       Int
  address     String
  createdAt   DateTime @default(now())
  updateAt    DateTime @updatedAt
  products    Json?
  description String
  value       Decimal
  method      Decimal  @default(0)
  warranty    DateTime
  state       Int
  userId      String
  user        User     @relation(fields: [userId], references: [id])

  @@map("services")
}
