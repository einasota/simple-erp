// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id    String  @id @default(uuid())
  name  String
  value Decimal
  type  Int

  @@map("products")
}

model Sell {
  id          String   @id @default(uuid())
  client      String
  createdAt   DateTime @default(now())
  updateAt    DateTime @updatedAt
  products    String // Json
  value       Decimal // Valor
  discont     Decimal // Desconto para da o valor final
  hasWarranty Boolean // Se h√° garantia
  warranty    DateTime // Data da garantia
  paid        Boolean
  userId      String
  user        User     @relation(fields: [userId], references: [id])

  @@map("sells")
}

model User {
  id        String    @id @default(uuid())
  name      String
  login     String
  pass      String
  createdAt DateTime  @default(now())
  sells     Sell[]
  services  Service[]

  @@map("users")
}

model Service {
  id          String   @id @default(uuid())
  name        String
  createdAt   DateTime @default(now())
  updateAt    DateTime @updatedAt
  products    String
  description String
  value       Decimal
  warranty    DateTime
  state       Int
  userId      String
  user        User     @relation(fields: [userId], references: [id])

  @@map("services")
}
